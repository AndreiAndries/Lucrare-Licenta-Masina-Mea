<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateProfile"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_margin="15dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="75dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_image_cp"
            android:background="@drawable/profile_unfocused"
            android:clickable="true"
            android:scaleType="center"
            android:focusable="true"
            android:contentDescription="TODO" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Name"
        android:textColorHint="@color/dark_grey"
        android:id="@+id/name_cp"
        android:layout_margin="6dp"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/custom_profile_input"
        android:textColor="@color/black"
        android:background="@drawable/custom_input"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Phone Number"
        android:textColorHint="@color/dark_grey"
        android:paddingStart="5dp"
        android:id="@+id/phone_cp"
        android:layout_margin="6dp"
        android:drawableStart="@drawable/custom_phone_input"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:background="@drawable/custom_input"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Email"
        android:paddingStart="5dp"
        android:drawablePadding="4dp"
        android:layout_margin="6dp"
        android:textColorHint="@color/dark_grey"
        android:id="@+id/email_cp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/custom_email_input"
        android:background="@drawable/custom_input"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="5dp"
        android:hint="Bio"
        android:layout_margin="6dp"
        android:textColorHint="@color/dark_grey"
        android:id="@+id/bio_cp"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/custom_info_input"
        android:textColor="@color/black"
        android:background="@drawable/custom_input"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save Profile"
        android:id="@+id/button_cp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_cp"
        android:visibility="invisible"
        android:layout_marginTop="10dp"/>

</LinearLayout>