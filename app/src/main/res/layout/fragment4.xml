<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/dark_grey">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_icon"
            android:id="@+id/ib_menu_f4"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:layout_gravity="left|center_vertical"    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="@color/white"
            android:id="@+id/tv_prof"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold|italic"/>

        <ImageButton                                           
            android:layout_width="wrap_content"                
            android:layout_height="wrap_content"               
            android:src="@drawable/edit_icon"
            android:id="@+id/edit_button_profile"
            android:layout_margin="10dp"                       
            android:background="@android:color/transparent"    
            android:layout_gravity="right|center_vertical"    />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="50dp"
                android:layout_gravity="center_vertical"
                android:elevation="8dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/profile_image_f4"
                    android:background="@drawable/profile_unfocused"
                    android:clickable="true"
                    android:scaleType="center"
                    android:focusable="true"
                    android:contentDescription="TODO" />

            </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:background="@drawable/custom_input_black">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/name_f4"
                android:layout_marginBottom="2dp"
                android:hint="name"
                android:textColorHint="@color/grey"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:gravity="start"
                android:textSize="30sp"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="PROFILE DETAILS"
        android:background="@color/dark_grey"
        android:textColorHint="@color/grey"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:padding="5dp"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:gravity="start"
        android:textSize="20sp"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIO"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="20dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:id="@+id/bio_f4"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_input_black"
        android:drawablePadding="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PHONE NUMBER"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="20dp"/>



     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Phone"
         android:id="@+id/phone_f4"
         android:textSize="15sp"
         android:drawableStart="@drawable/phone_icon_black"
         android:textColor="@color/black"
         android:textColorHint="@color/black"
         android:padding="10dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:background="@drawable/custom_input_black"
         android:drawablePadding="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textColorHint="@color/black"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawablePadding="20dp"/>



     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="email"
         android:id="@+id/email_f4"
         android:textSize="15sp"
         android:drawableStart="@drawable/email_icon_black"
         android:textColor="@color/black"
         android:textColorHint="@color/black"
         android:padding="10dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:background="@drawable/custom_input_black"
         android:drawablePadding="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:gravity="center">

    </LinearLayout>



</LinearLayout>